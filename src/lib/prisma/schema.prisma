generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // REMOVIDO: url = env("DATABASE_URL")
  // REMOVIDO: directUrl = env("DIRECT_URL")
  // Agora isso Ã© gerenciado pelo prisma.config.ts
}

enum ContentType {
  UPDATE
  BLOG_POST
  JOB_OPENING
  LEGAL
  HELP_ARTICLE
}

enum PublicationStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model ContentItem {
  id          String            @id @default(uuid())
  title       String
  slug        String            @unique
  excerpt     String?
  body        String            @db.Text
  coverImage  String?
  type        ContentType
  status      PublicationStatus @default(DRAFT)
  
  tags        String[]
  authorId    String            
  
  publishedAt DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([type, status])
  @@index([slug])
  @@map("cms_content_items")
}